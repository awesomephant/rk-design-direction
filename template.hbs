<body>
    
    <header class="document-header">
        <h1 class="section-title">Zwicker & Partner Design Direction <span class='annotation'>Version {{ version }}</span></h1>
    </header>
    <section>
        <h2 class='section-title'>Possible Colours</h2>
        <ul class="colours">
           {{#each colors}}
               <li class="colour" style='background-color: {{ color }}'>
                   <span class="colour-name">{{ color }}</span>
                   <span class="annotation">{{ description }}</span>
               </li>
           {{/each}}
        </ul>
    </section>
    <section>
        <h2 class="section-title">Possible Typefaces</h2>
        
        {{#each typefaces}}
        <h3 class='section-title typeface'>{{this}}</h3>
        <span class="annotation">Paragraph - 17px</span>
        <p class='font-copy' style='font-family: {{this}}'>
            {{ ../demoParagraph }}
        </p>
        <ul style='font-family: {{this}}' class='typeface'>
            <li style='font-size: 40px;'><span class="annotation typeface-size">40</span>{{../demoText}}</li>
            <li style='font-size: 30px'><span class="annotation typeface-size">30</span>{{../demoText}}</li>
            <li style='font-size: 24px'><span class="annotation typeface-size">24</span>{{../demoText}}</li>
            <li style='font-size: 18px'><span class="annotation typeface-size">18</span>{{../demoText}}</li>
            <li style='font-size: 16px'><span class="annotation typeface-size">16</span>{{../demoText}}</li>
            <li style='font-size: 14px'><span class="annotation typeface-size">14</span>{{../demoText}}</li>
        </ul>
        <ul style='font-size: 30px; font-family: {{this}}' class='typeface'>
            <li style='font-weight: 800;'><span class="annotation">800</span>{{../demoText}}</li>
            <li style='font-weight: 600'><span class="annotation">600</span>{{../demoText}}</li>
            <li style='font-weight: 500'><span class="annotation">500</span>{{../demoText}}</li>
            <li style='font-weight: 300'><span class="annotation">300</span>{{../demoText}}</li>
            <li style='font-weight: 100'><span class="annotation">100</span>{{../demoText}}</li>
        </ul>
        <ul class="components" style='font-family: {{this}}'>
        <li>  
            <header class='header-page doctors'>
                <h2>Ã„rzteinformation</h2>
                <h3>Strahlentherapie</h3>
            </header>
        </li>
        <li>
            <header class="header-hub patients">
                <h2>Patienteninformation</h2>
            </header>
        </li>
        </ul>
        {{/each}}
    </section>
    <section>
        <h2 class="section-title">Photography</h2>
        <ul class='images'>
        {{#each images}}
            <li>
                <img src="{{this}}" alt="">
            </li>
        {{/each}}
        </ul>
    </section>
</body>
</html>